<div class="row justify-content-center">
	<div class="col-md-6 col-md-offset-3 border-crudtour">
		<%= simple_form_for @tour, :html => { :multipart => true} do |f| %>
			<%= select_tag(:category_id, options_for_select(@categories), :prompt => "Chọn loại Tour") %>
			<%= f.file_field :tour_img %>
			<%= f.input :name, label: "Tên Tour", class: 'form-control' %>
			<%= f.input :destination,label: "Điểm đến", class: 'form-control' %>
			<%= f.input :tourday,label: "Thời gian", class: 'form-control' %>
			<%= f.input :price,label: "Giá tiền", class: 'form-control' %>
			<%= f.input :starday,label: "Khởi hành", class: 'form-control' %>
			<%= f.input :description,label: "Chi tiết Tour", as: :rich_text_area, class: 'form-control' %><br>
			<%= f.button :submit, class: "btn btn-primary"%>
		<% end %><br>
	</div>
</div>
